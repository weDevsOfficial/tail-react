root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{tsx,ts,js,json,css}]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
